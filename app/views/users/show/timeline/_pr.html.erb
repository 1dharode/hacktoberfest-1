<tr>
  <td class="icon-block"><%= render partial: 'users/show/timeline/box', locals: {pr: pr, user: user} %></td>
  <td>
    <div>
      <div class="timeline-date">
        <%= render partial: 'users/show/timeline/box', locals: {pr: pr, user: user} %>
