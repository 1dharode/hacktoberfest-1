<% if pr.invalid_label? %>
  <div class="icon-box">
    <div class="ineligible-box">
      <%= image_tag 'ineligible.png' %>
    </div>
  </div>
<% elsif pr.spam_repo? %>
  <div class="icon-box">
    <div class="spammy-box">
      <%= image_tag 'spam.png' %>
    </div>
  </div>
<% elsif pr.eligible? %>
  <div class="icon-box">
    <div class="eligible-box">
      <%= image_tag 'eligible.png' %>
    </div>
  </div>
<% elsif pr.waiting? %>
  <div class="icon-box">
    <div class="pending-box">
      <%= image_tag 'pending.png' %>
    </div>
  </div>
<% end %>
