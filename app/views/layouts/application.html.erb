<!DOCTYPE html>
<html>
  <head>
    <title>Hacktoberfest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => "reload" %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <div class="top-bgs">
    <%= render 'shared/header' %>
    <%= yield %>
  </div>
  <%= render 'shared/footer' %>
  <!-- Header Logo Tilt -->
  <script type="text/javascript">
  	VanillaTilt.init(document.getElementById("header-logo"), {
  		max: 5,
  		speed: 300
    });
    // <!-- Footer Logo Tilt -->
  	VanillaTilt.init(document.getElementById("footer-logo"), {
  		max: 7,
  		speed: 300
  	});
  </script>
  </body>
</html>
