  <div id="meetups"  class="mobile-table">
    <input name="filter" class="search input mobile" placeholder="Search for events" />

    <h2 class="highlight mobile">Showing <span data-js="visible_event_count"> all <%= @events.length %></span> Events</h2>

    <table id="mobile-table" class="table is-narrow is-narrow is-narrow is-narrow event-table mobile">
      <thead>
      <tr>
        <span id="mobile-sort" class="sort mobile" data-sort="location">Location</span>
        <span id="mobile-sort" class="sort mobile" data-sort="event_name">Event</span>
        <span id="mobile-sort" class="sort mobile" data-sort="date">Date</span>
      </tr>
      </thead>
      <tbody class="list mobile">
        <% @events.map do |e| %>
          <% if e.current? %>
            <tr>
          <% else %>
            <tr class="past mobile">
          <% end %>
          <tr>
            <td>
              <div class="multisort is-hidden mobile">
                <%= e.current? ? 'Future' : 'Past'%>
                <%= e.country %>
                <%= e.date.strftime("%m %d") %>
              </div>
              <br/>
              <div class="location mobile"><%= e.location %></div>
                <br/>
              <div class="event_name mobile">
                <a class="emphasis mobile" href="<%= e.url %>" target="blank" rel="noopener"><%= e.name %></a>
                <br/>
                by <%= e.organizer %>
              </div>
                <br/>
              <div>
                <div class="date is-hidden mobile"><%= e.date %></div>
                <div><%= e.date.strftime("%b %e") %></div>
              </div>
              <br/>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
