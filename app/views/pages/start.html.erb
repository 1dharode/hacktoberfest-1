<section class="section">
<div class="registration-steps">
  <div class="step one">
    <span class="yellow circle">1</span>
    <p>Register with GitHub</p>
  </div>
  <div></div> <%# css line %>
  <div class="step two">
    <span class="pink-open circle">2</span>
    <p>About You</p>
  </div>
  <div class="right-bar"></div> <%# css line %>
   <div class="step three">
    <span class="pink-open circle">3</span>
    <p>Start Contributing</p>
  </div>
</div>
</section>
<section class="section reg-content">
  <div>
    <h1 class="title is-1">Welcome to Hacktoberfest</h1>
    <p>
      To get started, you'll need to signup with your Github Account.
      If you don't have a GitHub account yet you can create one
      <a href="https://github.com/join">here</a>.
    </p>
    <%= link_to "Sign up with GitHub", register_path, :class => 'button' %>
  </div>
</section>
