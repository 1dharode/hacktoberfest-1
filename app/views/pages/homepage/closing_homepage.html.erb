    <div class="section2 space">
      <div class="line-br">
        <span class="line-br-1">-</span>
        <span class="line-br-2">-</span>
      </div>
    </div>
    <section>
      <h1 class="title is-3">Sign up to get notified about Hacktoberfest</h1>
      <div class="notify-cont">
        <input type="email" value="What is your email address?" class="input notify-input" id="email-input" onclick="clearInput()">
        <input type="submit" value="Update me" class="button notify-button" onclick="notifyUserEmail()">
      </div>
    </section>
  </section>
</main>
<script type="text/javascript">
  setupHomeImageSwap();
  setupLanguageFilter();
  setupPRsOpenedChart();
</script>
