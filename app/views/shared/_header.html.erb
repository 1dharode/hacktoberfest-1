<header>
  <nav class="navbar" id="navbar">
      <a href="/"><img id="header-logo-light" src="<%= asset_path('h-light.svg') %>" alt="Hacktoberfest Logo" width="109" ></a>
      <a href="/"><img id="header-logo-dark" src="<%= asset_path('h-dark.svg') %>" alt="Hacktoberfest Logo" width="109" ></a>
    <ul class="navbar-end">
      <li><%= link_to "home", root_path, :class => active_path_class?(root_path, '') + " navLink"  %></li>
      <li><%= link_to "resources", details_path, :class => active_path_class?(details_path, '') + " navLink"  %></li>
      <li class="dropdown is-hoverable">
        <div class="dropdown-trigger">
          <%= link_to "Events", events_path, :class => active_path_class?(events_path, event_kit_path) + " navLink"%>
        </div>
        <div class="dropdown-menu" id="dropdown-menu" role="menu">
          <div class="dropdown-content">
            <%= link_to "View All Events", events_path, :class => "dropdown-item navLink"  %>
            <hr class="dropdown-divider">
            <%= link_to "Event Organizer Kit", event_kit_path, :class => "dropdown-item navLink"  %>
          </div>
        </div>
      </li>
      <li><%= link_to "faq", faq_path, :class => active_path_class?(faq_path, '') + " navLink"  %></li>
      <% if @current_user %>
        <li><%= link_to "profile", profile_path, :class => active_path_class?(profile_path, '') + " button button-small navLink"  %></li>
      <% else %>
        <li><%= link_to Hacktoberfest.ended? ? "see your profile" : "start hacking", profile_path, :class => "button button-small navLink"  %></li>
      <% end %>
    </ul>
  </nav>
  <div class="toggle">
    <p>Dark Mode </p>
    <label class="toggle-switch">
       <input
          type="checkbox"
          onclick="
          localStorage.setItem('mode', (localStorage.getItem('mode') || 'light') === 'light' ? 'dark' : 'light'); 
          localStorage.getItem('mode') === 'dark' ? document.querySelector('body').classList.add('dark') : document.querySelector('body').classList.remove('dark')" 
          title="Dark/light"
        />
        <span class="toggle-slider"></span>
      </label>
  </div>
</header>
