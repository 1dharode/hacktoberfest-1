window.renderImage = function(template, node) {
  if (!node) return;
  node.innerHTML = (typeof template === 'function' ? template() : template);
}

window.logoImage = function() {
  const mode = localStorage.getItem('mode');
  if(mode === "dark") {
    template = `<img class="dark-img" id="header-logo-dark" src="<%= asset_path('h-dark.svg') %>" alt="Hacktoberfest Logo" width="109" >`
  } else {
    template = `<img class="light-img" id="header-logo-light" src="<%= asset_path('h-light.svg') %>" alt="Hacktoberfest Logo" width="109" >`
  }
  return template
}
