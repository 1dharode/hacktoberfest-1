<%# Remove old img element if it exists and create new img element %>
window.renderImage = function(node, src, alt, id) {
  if (!node) return;
  if(node.children.length > 0) node.removeChild(node.firstChild);
  var image = document.createElement('img');
  image.src=src;
  if(alt) image.alt=alt;
  if(id) image.id=id
  return node.appendChild(image);
} 

